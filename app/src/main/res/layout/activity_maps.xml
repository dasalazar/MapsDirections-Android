<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.example.dodo.rotamapa.MapsActivity">    <EditText        android:id="@+id/editText_origem"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Origem"/>    <EditText        android:id="@+id/editText_destino"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Destino"/>    <Button        android:id="@+id/button"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:onClick="search"        android:text="Buscar"/>    <fragment        android:id="@+id/map"        android:name="com.google.android.gms.maps.SupportMapFragment"        android:layout_width="match_parent"        android:layout_height="match_parent"/></LinearLayout>